package ex01.quiz;

import java.util.Scanner;

public class ScoreViewImpl implements IScoreView {
	private ScoreImpl score;
	
	// setter로 주입
	
	public void setView(ScoreImpl score) {//DI적용
		this.score = score;
	}
	
	@Override
	public void input() {
		Scanner sc = new Scanner(System.in);
		System.out.print("이름 : ");		score.setName(sc.next());
		System.out.print("음악 : ");		score.setMusic(sc.nextInt());
		System.out.print("미술 : ");		score.setArt(sc.nextInt());
		System.out.print("체육 : ");		score.setPe(sc.nextInt());
	}

	@Override
	public void print() {
		System.out.println("이름 : " + score.getName());
	}

}
