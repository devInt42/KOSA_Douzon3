package ex01.quiz;

import org.springframework.context.ApplicationContext;
import org.springframework.context.support.ClassPathXmlApplicationContext;

public class MainEntry {
	public static void main(String[] args) {
		
		ApplicationContext ctx = new ClassPathXmlApplicationContext("grade.xml");
		ScoreImpl gr = (ex01.quiz.ScoreImpl) ctx.getBean("grade");
		gr.total();
		gr.avg();
		gr.display();
		
		System.out.println("========입력값 받기===========");

		ScoreImpl gr2 = new ScoreImpl();
		gr2.Input();
		gr2.total();
		gr2.avg();
		gr2.display();
	
	}
}
