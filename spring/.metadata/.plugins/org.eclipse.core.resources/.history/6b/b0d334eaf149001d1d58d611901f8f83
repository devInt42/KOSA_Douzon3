package ex01.quiz;

import java.util.Scanner;

public class GradeImpl implements IGrade {
	private String name;
	private int music, art, pe, tot;
	private double avg;

	// 1. constructor(»ý¼ºÀÚ ÀÌ¿ë)
	public GradeImpl() {
		this("", 0, 0, 0);
	}

	public GradeImpl(String name, int music, int art, int pe) {
		super();
		this.name = name;
		this.music = music;
		this.art = art;
		this.pe = pe;
	}

	// 2.setter method

	public void setName(String name) {
		this.name = name;
	}

	public void setMusic(int music) {
		this.music = music;
	}

	public void setArt(int art) {
		this.art = art;
	}

	public void setPe(int pe) {
		this.pe = pe;
	}

	public void setTot(int tot) {
		this.tot = tot;
	}

	public void setAvg(double avg) {
		this.avg = avg;
	}

	// ¼ºÀûÃ³¸® ÀÌ¸§, À½¾Ç, ¹Ì¼ú, Ã¼À° , ÃÑÁ¡, Æò±Õ
	@Override
	public int total() {
		int tot = this.art + this.music + this.pe;
		setTot(tot);
		return tot;
	}

	public String getName() {
		return name;
	}

	public int getMusic() {
		return music;
	}

	public int getArt() {
		return art;
	}

	public int getPe() {
		return pe;
	}

	public int getTot() {
		return tot;
	}

	public double getAvg() {
		return avg;
	}

	@Override
	public double avg() {
		double avg = tot / 3;
		setAvg(avg);
		return avg;
	}

	public void display() {
		System.out.println("ÀÌ¸§ : " + getName());
		System.out.println("ÃÑÁ¡ : " + getTot());
		System.out.println("Æò±Õ : " + getAvg());
	}

}
