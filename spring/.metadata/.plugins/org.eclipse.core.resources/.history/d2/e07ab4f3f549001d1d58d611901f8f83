package ex01.quiz;

import java.util.Scanner;

public class ScoreViewImpl implements IScoreView {
	private IScoreView score;
	
	// setter로 주입
	
	public void setView(ScoreImpl score) {//DI적용
		this.score = score;
	}
	
	@Override
	public void input() {
		Scanner sc = new Scanner(System.in);
		System.out.print("이름 : ");		score.setName(sc.next());
		System.out.print("kor : ");		record.setKor(sc.nextInt());
		System.out.print("eng : ");		record.setEng(sc.nextInt());
		System.out.print("com : ");		record.setCom(sc.nextInt());
	}

	@Override
	public void print() {
		// TODO Auto-generated method stub

	}

}
