package ex01.quiz;

import java.util.Scanner;

public class GradeImpl implements IGrade {
	private String name;
	private int music, art, pe, tot;
	private double avg;

	// 1. constructor(»ý¼ºÀÚ ÀÌ¿ë)
	public GradeImpl() {
	}
	public GradeImpl() {
		this("", 0, 0, 0);
	}

	public GradeImpl(String name, int music, int art, int pe) {
		super();
		this.name = name;
		this.music = music;
		this.art = art;
		this.pe = pe;
	}

	// 2.setter method

	public void setName(String name) {
		this.name = name;
	}

	public void setMusic(int music) {
		this.music = music;
	}

	public void setArt(int art) {
		this.art = art;
	}

	public void setPe(int pe) {
		this.pe = pe;
	}

	public void setTot(int tot) {
		this.tot = tot;
	}

	public void setAvg(double avg) {
		this.avg = avg;
	}

	// ¼ºÀûÃ³¸® ÀÌ¸§, À½¾Ç, ¹Ì¼ú, Ã¼À° , ÃÑÁ¡, Æò±Õ
	@Override
	public int total() {
		Scanner sc = new Scanner(System.in);
		System.out.println("ÀÌ¸§ : ");
		setName(sc.next());
		System.out.println("À½¾Ç : ");
		setMusic(sc.nextInt());
		System.out.println("¹Ì¼ú : ");
		setArt(sc.nextInt());
		System.out.println("Ã¼À° : ");
		setPe(sc.nextInt());
		int tot = this.art + this.music + this.pe;
		setTot(tot);
		return tot;
	}

	@Override
	public double avg() {
		double avg = tot/3;
		setAvg(avg);
		return avg;
	}
	public void display() {
		System.out.println("ÀÌ¸§ : " + this.name);
		System.out.println("ÃÑÁ¡ : " + this.tot);
		System.out.println("Æò±Õ : " + this.avg);

	}
}
